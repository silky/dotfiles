-- Hoogle search showing all matches
:def hoogle \x -> return $ ":! hoogle --color --count=15 \"" ++ x ++ "\""
:def doc    \s -> return $ ":! hoogle --info \"" ++ s ++ "\""
:def hlint  \s -> return $ ":! hlint \"" ++ s ++ "\""
